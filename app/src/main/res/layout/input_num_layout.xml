<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/inputLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/CreateGameLabelStyle"
        tools:text="@string/questions_number"/>
    <Button
        android:id="@+id/minusButton"
        android:text="@string/minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/inputLabel"
        app:layout_constraintTop_toTopOf="@id/inputLabel"
        app:layout_constraintBottom_toBottomOf="@id/inputLabel"
        style="@style/CreateGameOperatorButtonStyle"/>
    <EditText
        android:id="@+id/inputEdit"
        style="@style/CreateGameNumInputStyle"
        app:layout_constraintStart_toEndOf="@id/minusButton"
        app:layout_constraintTop_toTopOf="@id/inputLabel"
        app:layout_constraintBottom_toBottomOf="@id/minusButton"/>
    <Button
        android:id="@+id/plusButton"
        android:text="@string/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/inputEdit"
        app:layout_constraintTop_toTopOf="@id/inputLabel"
        app:layout_constraintBottom_toBottomOf="@id/inputLabel"
        style="@style/CreateGameOperatorButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>